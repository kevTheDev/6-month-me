!!! Strict
%html{:xmlns => 'http://www.w3.org/1999/xhtml'}
  %head
    %title
      = @title || 'Six Month Letter'
    %link{:rel => 'stylesheet', :href => '/stylesheets/application.css', :type => 'text/css', :media => 'all'}
  %body
    %div{:id => 'container'}
      %div{:id => 'menu_bar'}
        %div{:id => 'links'}
          %a{:href => '/'}
            Home
          - if logged_in?
            %a{:href => "/signout"}
              Log Out
          - else
            %a{:href => '/signin'}
              Log In
        %div{:class => 'clear'}
      %div{:id => 'title_bar'}
        Six Month Letter
      - if session[:flash]
        %div{:class => 'flash'}
          %p{:class => session[:flash].type.to_s }        
            = session[:flash].content
          
          - session.delete(:flash)
          
          
      %div{:id => 'contents'}      
        = yield
    %div{:id => 'footer'}
      %a{:href => '/about'}
        About        
      %a{:href => '/contact'}
        Contact
%plain
  <script src="http://sixmonthletter.uservoice.com/pages/general/widgets/tab.js?alignment=left&amp;color=00BCBA" type="text/javascript"></script>