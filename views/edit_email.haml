%h1
  Edit the future
  
%div  
  %form{:action => "/emails/#{@email.id}", :method => "POST"}
    %input{:type => 'hidden', :name => '_method', :value => 'PUT'}
    - if @error
      %div{:class => "error"}
        = @error
    %textarea{:name => "email_content", :cols => "50", :rows => "20"}
      = @email.content
    %input{:type => "submit", :value => "submit"}